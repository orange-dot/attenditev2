# ===========================================
# Platform Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env file to version control!

# ===========================================
# General
# ===========================================
DOMAIN=platform.gov.rs
VERSION=1.0.0
REGISTRY=registry.gov.rs/platform

# ===========================================
# SSL/TLS (Let's Encrypt)
# ===========================================
ACME_EMAIL=admin@platform.gov.rs

# ===========================================
# Traefik Dashboard
# ===========================================
# Generate with: htpasswd -nb admin password
TRAEFIK_AUTH=admin:$apr1$xxxxx

# ===========================================
# PostgreSQL (Main Database)
# ===========================================
DB_USER=platform
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_32_CHARS
DB_NAME=platform

# ===========================================
# Keycloak Database
# ===========================================
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=CHANGE_ME_KEYCLOAK_DB_PASSWORD

# ===========================================
# Keycloak Admin
# ===========================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_KEYCLOAK_ADMIN_PASSWORD

# ===========================================
# NATS
# ===========================================
NATS_USER=platform
NATS_PASSWORD=CHANGE_ME_NATS_PASSWORD

# ===========================================
# MinIO (Object Storage)
# ===========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD_MIN_8_CHARS

# ===========================================
# Redis
# ===========================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ===========================================
# OPA (Policy Engine)
# ===========================================
OPA_AUTH_TOKEN=CHANGE_ME_OPA_TOKEN

# ===========================================
# JWT
# ===========================================
JWT_SECRET=CHANGE_ME_JWT_SECRET_AT_LEAST_32_CHARS_LONG

# ===========================================
# Grafana
# ===========================================
GRAFANA_ADMIN=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
GRAFANA_OAUTH_SECRET=CHANGE_ME_GRAFANA_OAUTH_SECRET

# ===========================================
# Alertmanager (Optional)
# ===========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
ALERT_EMAIL=alerts@platform.gov.rs

# ===========================================
# Adapter Configurations (Phase 5)
# ===========================================

# Heliant HIS Adapter (OB Kikinda)
HELIANT_HOST=192.168.1.100
HELIANT_PORT=1433
HELIANT_DATABASE=HeliantDB
HELIANT_USER=platform_reader
HELIANT_PASSWORD=CHANGE_ME_HELIANT_PASSWORD
HELIANT_INSTITUTION_CODE=OB_KIKINDA
HELIANT_INSTITUTION_NAME=Op≈°ta bolnica Kikinda

# Socijalna Karta API
SOCIALCARD_API_URL=https://api.servisnaMagistrala.gov.rs/socijalna-karta/v1
SOCIALCARD_CERT_PATH=/certs/client.crt
SOCIALCARD_KEY_PATH=/certs/client.key
SOCIALCARD_CA_PATH=/certs/ca.crt

# ===========================================
# Development Only (DO NOT USE IN PRODUCTION)
# ===========================================
# DEV_MODE=true
# SKIP_AUTH=true
# LOG_LEVEL=debug
